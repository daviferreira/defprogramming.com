{
  "extends": [
    "stylelint-config-recommended"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "no-descending-specificity": null,
    "declaration-block-no-redundant-longhand-properties": [
      true,
      { ignoreShorthands: ["/flex/"] }
    ],
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-alphabetical-order": true
  }
}
